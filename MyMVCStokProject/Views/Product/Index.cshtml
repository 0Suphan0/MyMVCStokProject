
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@model List<MyMVCStokProject.Models.Entitiy.TBL_URUNLER>


<table class="table table-bordered">
    <tr>
        <th>Urun ID</th>
        <th>Urun Kategori</th>
        <th>Urun Ad</th>
        <th>Fiyatı</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    
    <tbody>
    
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.URUNID</th>
            <th>@item.TBL_KATEGORILER.KATEGORIAD</th>
            <td>@item.URUNAD</td>
            <td>@item.FIYAT</td>
            <td>@item.MARKA</td>
            <td>@item.STOK</td>
            <th><a href="/Product/DeleteProduct/@item.URUNID" class="btn btn-danger">SİL</a></th>
            <th><a href="/Product/Update/@item.URUNID" class="btn btn-success">GÜNCELLE</a></th>
        </tr>
    }

    </tbody>
</table>

<a href="/Product/NewProduct" class="btn btn-primary">Yeni Ürün</a>
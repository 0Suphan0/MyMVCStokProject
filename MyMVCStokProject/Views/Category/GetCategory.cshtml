@model MyMVCStokProject.Models.Entitiy.TBL_KATEGORILER
@{
    ViewBag.Title = "GetCategory";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



@using (Html.BeginForm("Update", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m=>m.KATEGORIID);
        @Html.TextBoxFor(m=>m.KATEGORIID,new {@class="form-control"})
        <br/>
        @Html.LabelFor(m=>m.KATEGORIAD);
        @Html.TextBoxFor(m=>m.KATEGORIAD,new {@class="form-control"})

    </div>

    <div>
        <button type="submit" class="btn btn-success">Kategori Güncelle</button>
    </div>
}
